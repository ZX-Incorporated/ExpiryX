<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_card_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imageHistoryDetail"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="History product image"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_carton_scan" />

            <TextView
                android:id="@+id/textHistoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHistoryBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif-italic"
                android:text="No notes"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textHistoryExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry: -"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textHistoryQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 1"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textHistoryWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: -"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textHistoryFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite: false"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Barcode Display -->
            <TextView
                android:id="@+id/txtHistoryBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Barcode: N/A" 
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <!-- Date Added -->
            <TextView
                android:id="@+id/txtHistoryDateAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Added: N/A"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Date Modified -->
            <TextView
                android:id="@+id/txtHistoryDateModified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Modified: N/A"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <!-- Action buttons -->
            <Button
                android:id="@+id/btnPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/green"
                android:text="Restore"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FF4444"
                android:text="Permanently Delete"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
