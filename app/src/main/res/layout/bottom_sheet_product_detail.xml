<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imgProductDetail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_carton_scan"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/rounded_image_bg"
            android:padding="4dp"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/txtDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"/>

        <!-- Notes / Memo -->
        <TextView
            android:id="@+id/txtDetailNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a memo..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif-italic"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>


        <!-- Expiry -->
        <TextView
            android:id="@+id/txtDetailExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires on: 2025-09-01"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/txtDetailQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 2"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Weight -->
        <TextView
            android:id="@+id/txtDetailWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight: 500g"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Reminder days -->
        <TextView
            android:id="@+id/txtDetailReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder: 3 days before"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="16dp"/>

        <!-- Mark as Used Button -->
        <Button
            android:id="@+id/btnMarkAsUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Used"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />


        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF4444"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
