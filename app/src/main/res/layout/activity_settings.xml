<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background"
        android:elevation="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?attr/colorOnBackground"/>
    </LinearLayout>

    <!-- Scrollable settings content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNavWrapper"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="8dp">

            <!-- Preferences Section -->
            <TextView
                style="@style/SettingsHeader"
                android:paddingTop="8dp"
                android:text="PREFERENCES" />

            <!-- Notifications -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notifications_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/notifications_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_notifications"
                            app:tint="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/notifications_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView style="@style/SettingsTitle" android:text="Notifications" />
                        <TextView style="@style/SettingsSubtitle" android:text="Manage reminder time &amp; intervals" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dark Mode -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dark_mode_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/dark_mode_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_dark_mode"
                            app:tint="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/dark_mode_icon_container"
                        android:layout_toStartOf="@+id/dark_mode_switch">

                        <TextView style="@style/SettingsTitle" android:text="Dark Mode" />
                        <TextView style="@style/SettingsSubtitle" android:text="Switch between light &amp; dark" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/dark_mode_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Data & Storage Section -->
            <TextView
                style="@style/SettingsHeader"
                android:paddingTop="8dp"
                android:text="DATA &amp; STORAGE" />

            <!-- Export Data -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/export_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/export_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_export"
                            app:tint="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/export_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView style="@style/SettingsTitle" android:text="Export Data" />
                        <TextView style="@style/SettingsSubtitle" android:text="Download your stored data" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delete All Data -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/delete_data_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/delete_data_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_delete"
                            app:tint="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/delete_data_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView style="@style/SettingsTitle" android:text="Delete All Data" />
                        <TextView style="@style/SettingsSubtitle" android:text="Permanently erase all user data" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Section (moved to bottom) -->
            <TextView
                style="@style/SettingsHeader"
                android:paddingTop="8dp"
                android:text="ABOUT" />

            <!-- Donate -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/donate_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@color/light_gold"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/donate_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/gold">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_fav_filled"
                            app:tint="@android:color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/donate_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView style="@style/SettingsTitle" android:text="Donate" />
                        <TextView style="@style/SettingsSubtitle" android:text="Support development of ExpiryX" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rate this App -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rate_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/light_gold"
                app:strokeColor="@color/gold"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/rate_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/gold">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_star"
                            app:tint="@android:color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/rate_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView style="@style/SettingsTitle" android:text="Rate this App" />
                        <TextView style="@style/SettingsSubtitle" android:text="Leave a review on Google Play" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- App Version -->
            <TextView
                android:id="@+id/appVersionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Version 1.0"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottomNavWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="?attr/colorBackground"
        android:elevation="6dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"/>

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/navHomeWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_unfilled"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navCartWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navCart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Store"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navHistoryWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clock_unfilled"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="History"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navSettingsWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings_unfilled"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnBackground"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
