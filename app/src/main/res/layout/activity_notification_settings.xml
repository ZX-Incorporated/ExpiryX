<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Top bar with back arrow -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@android:color/black"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Notification Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Scrollable settings -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNavWrapper"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                style="@style/SettingsHeader"
                android:text="REMINDERS" />

            <!-- Default Time -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/defaultTimeCard"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Left Icon -->
                    <LinearLayout
                        android:id="@+id/time_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_time"
                            app:tint="@android:color/black"/>
                    </LinearLayout>

                    <!-- Texts -->
                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/time_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView
                            style="@style/SettingsTitle"
                            android:text="Default Time" />

                        <!-- ✅ Fixed ID -->
                        <TextView
                            android:id="@+id/defaultTimeSubtitle"
                            style="@style/SettingsSubtitle"
                            android:text="6:00 PM (tap to change)" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reminder Intervals -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/intervals_card"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Left Icon -->
                    <LinearLayout
                        android:id="@+id/intervals_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_repeat"
                            app:tint="@android:color/black"/>
                    </LinearLayout>

                    <!-- Texts -->
                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/intervals_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView
                            style="@style/SettingsTitle"
                            android:text="Reminder Intervals" />

                        <TextView
                            style="@style/SettingsSubtitle"
                            android:text="1 day before, on expiry" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Snooze Duration -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/snoozeCard"
                style="@style/SettingsCard"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Left Icon -->
                    <LinearLayout
                        android:id="@+id/snooze_icon_container"
                        style="@style/SettingsIconContainer"
                        android:backgroundTint="@color/teal_200">

                        <ImageView
                            style="@style/SettingsIcon"
                            android:src="@drawable/ic_snooze"
                            app:tint="@android:color/black"/>
                    </LinearLayout>

                    <!-- Texts -->
                    <LinearLayout
                        style="@style/SettingsTextLayout"
                        android:layout_toEndOf="@id/snooze_icon_container"
                        android:layout_alignParentEnd="true">

                        <TextView
                            style="@style/SettingsTitle"
                            android:text="Snooze Duration" />

                        <!-- ✅ Fixed ID -->
                        <TextView
                            android:id="@+id/snoozeSubtitle"
                            style="@style/SettingsSubtitle"
                            android:text="1 hour (tap to change)" />
                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav (unchanged) -->
    <LinearLayout
        android:id="@+id/bottomNavWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="6dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/navHomeWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_unfilled"
                    app:tint="@android:color/black"
                    android:contentDescription="Home"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Store -->
            <LinearLayout
                android:id="@+id/navCartWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navCart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    app:tint="@android:color/black"
                    android:contentDescription="Store"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- History -->
            <LinearLayout
                android:id="@+id/navHistoryWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clock_unfilled"
                    app:tint="@android:color/black"
                    android:contentDescription="History"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/navSettingsWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/navSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings_unfilled"
                    app:tint="@android:color/black"
                    android:contentDescription="Settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
