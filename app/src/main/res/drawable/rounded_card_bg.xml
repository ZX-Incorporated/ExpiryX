<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (white for light mode) -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Soft shadow-like border -->
    <stroke
        android:width="1dp"
        android:color="#22000000" /> <!-- light gray border -->

    <!-- Elevation wonâ€™t apply here, so we fake subtle depth with padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
